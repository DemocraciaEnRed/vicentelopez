nav.navbar
  padding: 0 1rem
  .navbar-brand
    padding-top: 0
    padding-bottom: 0
  a
    color: #71bf44
    text-transform: uppercase
    font-family: 'Roboto', sans-serif
    font-weight: 400
    // padding: 0 auto
  ul
    margin-top: 1.8%
  .navbar-brand
    img
      height 73px
  .nav-link
    text-transform uppercase
    color inherit
    font-size 12px
    padding-top .7rem
    padding-bottom .7rem
    span.icon-bell
      font-size 16px
      font-weight bold
  #toggleButton
    display none
    float left
    background none
    border none
    color inherit
    padding .5rem 0
    margin-right 10px
    .icon-menu
      font-size 22px

@media screen and (max-width: 700px)
  #toggleButton
    display block!important

