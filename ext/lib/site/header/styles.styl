nav.navbar
  padding: 0 4px
  @media screen and (min-width: 455px)
    padding: 0 1rem

  .navbar-brand
    padding-top: 0
    padding-bottom: 0
    margin: 0
  a
    color: #71bf44
    text-transform: uppercase
    font-family: 'Roboto', sans-serif
    font-weight: 400
    // padding: 0 auto
  ul
    margin-top: 22px
    @media screen and (min-width: 455px)
      margin-top: 28px
  .navbar-nav
    margin-right: 5px
    .user-badge
      float: left
      height: 60px
    .nav-item
      float: left
      .nav-link
        padding-top: 20px
        padding-right: 20px
      height: 60px
  .navbar-brand
    padding: 7px
    img
      margin-top: 5px
      height: 45px
      @media screen and (min-width: 455px)
        height: 60px
        margin-top: 0
  .nav-link
    text-transform uppercase
    color inherit
    font-size 12px
    padding-top .7rem
    padding-bottom .7rem
    span.icon-bell
      font-size 16px
      font-weight bold
      position: absolute
      right: 160
      bottom: 15
  #toggleButton
    display none
    float left
    background none
    border none
    color inherit
    padding .5rem 0
    margin-right 10px
    .icon-menu
      font-size 22px

@media screen and (max-width: 700px)
  #toggleButton
    display block!important

