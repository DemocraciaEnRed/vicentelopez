@import "mobile-menu/styles"
@import "user-badge/styles"

#outer-layout
  padding: 0 !important
nav.navbar
  box-shadow 1px 1px 1px -1px rgba(#000, .175)
  padding: 0 0 0 32px
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  align-items: center
  border-width: 0;
  &:before, &:after
    content: none
  .navbar-brand
    padding: 0
    margin-right: 0
    height: auto;
    img
      height: 30px
      @media screen and (min-width: 1080px)
        -moz-heigth: 60%
    .logo-mobile
      height: 30px
  a
    color: #00a9ce
    text-transform: uppercase
    font-weight: bold
  a.active
    color: #8c1e81
  .navbar-nav
    font-size: 17px
    display: flex
    align-items center
    margin-right: 0
    margin-top: 0
    .user-badge
      .user-badge-link
        margin: 0
    .nav-item //campanita notificaciones
      margin: 0 20px
      @media screen and (min-width: 500px)
        margin: 0 25px
      .nav-link
        color inherit
        span.icon-bell
          font-size: 24px
          color: #00a9ce
          @media screen and (min-width: 975px)
            font-weight: bold
  .header-item
    height: 80px;
    font-weight: bold
    display: flex;
    align-items: center;
    &:hover
      background-color: rgb(0, 169, 206)
      .header-link
        color: white
    .header-link
      height: 100%
      padding: 0 20px
      display: flex
      align-items: center
      justify-content: center
      position: relative
    .info-votacion
      color: #7cbb42
  .user-badge-helper
    margin-left 10px

 a.header-link.anon-user
  text-transform:lowercase

.vot-button
  position: absolute; /* Position them relative to the browser window */
  background-color: #7cbb42;
  top: 40vh;
  right: -1; /* Position them outside of the screen */
  padding: 15px 4px 5px;
  transition: 0.3s; /* Add transition on hover */
  text-decoration: none; /* Remove underline */
  font-size: 1.2em;
  font-weight: 700;
  border-radius: 5px 5px 0 0;
  -moz-transform:rotate(-90deg);
  -ms-transform:rotate(-90deg);
  -o-transform:rotate(-90deg);
  -webkit-transform:rotate(-90deg);
  transform-origin: bottom right;

  a
    color: #fff!important

.vot-button-mobile
  background-color: #7cbb42
  a
    color: white !important