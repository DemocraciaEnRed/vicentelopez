.user-badge
  position relative

  &.active
    button
      background rgba(0,0,0,.1)
    .dropdown-list
      display block

  button
    color inherit
    background none
    border none
    cursor pointer
    padding 0
    height 54px

    .name
      font-weight bold

    .caret
      margin-left 6px
      position relative
      right 0
      top 0
      color inherit

    img
      width 32px
      border-radius 100px
      margin -.5rem 5px -.5rem 0

  .dropdown-list
    display none
    position absolute
    top 100%
    right 0
    z-index 1000
    padding 0
    width auto
    font-size 14px
    white-space nowrap
    list-style none
    border 1px solid rgba(#000,.15)
    box-shadow 1px 1px 4px -1px rgba(#000, .175)
    color #000
    background-color #f9f9f9

    a
      display block
      clear both
      padding 10px 20px
      line-height 1.5
      text-transform none
      font-weight bold
      text-decoration none
      color inherit

      &:hover
        background #2c3e50
        color white
