@import '../../../../node_modules/tags-input/tags-input.css'
@import '../../../../lib/admin/admin-topics-form/tag-autocomplete/styles'


.form-propuesta
  display: flex
  flex-direction: column
  align-items: center
  .propuesta-header
    color: white
    text-shadow: 0 1px 4px #555
    display: flex
    align-items: center
    flex-direction: column
    justify-content: center
    min-height: 250px
    width: 100%
    padding: 0 20px
    text-align: center
    background-size: cover
    background-image: unquote("url('ext/lib/site/anfiteatro-1.jpg')")
    background-repeat: no-repeat
    h1
      font-size: 40px
    p
      font-size: 24px

  .wrapper
    max-width:900px
    width: 100%
    padding: 20px
    position: relative
    
    .bar-section
      background-color: #1791be
      padding: 1.6rem 1rem;
      p
        margin: 0
        color: #FFF
        text-align: center;
        line-height: normal;
      .section-title
        font-size: 2.5rem;
        font-weight: bold
      .section-subtitle
        font-size: 0.9rem
    .required
      color: #1791be
    label
      // color: rgba(0, 0, 0, 0.55)
      margin: 10px 0 10px 0;
      font-size: 1.3em;
      font-weight: bold;
    input
      width:100%
    .tags-input
      border-radius: 5px
      border: 1px solid #CACACA
      padding: 3px 10px
      width: 100%

    input, select, textarea
      border-radius: 0px
      border: 1px solid #CACACA
      border-bottom: 2px solid #CACACA
      font-size: 1.2rem
      color: #000
      &:focus
        box-shadow: none;
        // border-color: #1791be
        border: 1px solid #1791be
        border-bottom: 2px solid #1791be
    .submit-div
      text-align: center
      .submit-btn
        border-radius: 10px
        background: #1791be
        color: #fff
        border: none
        padding: 10px 30px
        font-weight: 600;
        font-size: 20px
        &:hover
          cursor: pointer
    .form-section-label
      color: #9e41b9
      font-size: 18px
      font-weight: bold
      @media screen and (min-width: 1360px)
        position: relative
        left: -240px
        margin-top: 10px
        top: 30px
  
  select.special-height
    height: 3rem !important;

  .help-text
    display: block
    font-size: .8em
    color: #666
    margin: 0 0 .3em 
    &.requerido
      font-size: .7em
      font-style: italic
      color: #828282 

  .span-alert
    color: #9e41b9
    font-size:.8em
    @media screen and (min-width: 1360px)
        position: relative
        // left: -240px
        margin-top: 10px
        top: 30px  
  .cronograma-alert
    padding-top:10px

  .cronograma
    tex-align:right
    margin-top: 40px