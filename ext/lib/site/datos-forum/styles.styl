.seccion-datos-por-foro
  font-family: 'BrandonGrotesque', sans-serif
  text-align: center
  text-transform: uppercase
  .div-presupuesto
    padding: 15px 0
    background-color: #71bf44
    h3
      color: #FFFFFF
      margin: 0
  .div-boleta
    padding: 15px
    a
      display: flex
      align-items: center
      justify-content: center
      color: #8C1E81
      font-size: 17px
      margin: 0 5px
      .icon-boleta
        background-image: unquote("url('ext/lib/site/datos-forum/DownloadFile.svg')")
        background-repeat: no-repeat
        background-size: cover
        width: 25px
        height: 25px
        display: inline-block
        margin-right: 10px
    