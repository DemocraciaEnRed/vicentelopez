.reply-comments-form
  position: relative
  display: flex
  flex-wrap: wrap
  margin: 0 -15px -5px
  padding: 10px
  border-top: 1px solid #e7e7e7
  z-index: 0
  background-color: #fff

  &.focused
    .reply-create
      width: 100%

  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .9)

  .avatar
    margin-right: 10px
    width: 1.4em
    height: 1.4em

  .name
    flex-grow: 2
    margin: 0 0 1em
    padding: .55em 0
    font-size: .8em
    font-weight: bold
    transition: all .3s

  .reply-create
    flex-grow: 2
    resize: none
    margin: 0
    padding: .2em 0
    border: 0
    line-height: 1.6
    font-size: .875em
    font-weight: inherit
    color: inherit
    outline: none
    box-shadow: none
    background-color: transparent

  .actions
    margin-top: 1em
    width: 100%

  .error
    margin: 1em 0 0
