.topics-cause-propuesta
  position: relative
  padding: 20px 35px
  display: flex
  justify-content: center
  align-items: center
  background: #f8f8f8
  border-radius: 10px
  .btn
    background: #099dc3
    margin: 0 30px 0 0
    width: auto
    border: none
  .likes-total
    font-weight: 400
    color: #a5a9aa
    display: inline-block
    span
      font-weight: normal
      color: #099dc3
  .overlay-vote
    position: absolute
    background: rgba(255, 255, 255, 0.71)
    width: 100%
    height: 100%
    border-radius: 10px
    top: 2px
    display: flex
    align-content: center
    justify-content: center
    span
      align-self: center
      color: #555