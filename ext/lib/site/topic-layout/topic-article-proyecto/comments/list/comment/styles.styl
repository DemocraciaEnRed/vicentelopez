.comments-list-item
  position: relative
  margin-bottom: 15px
  padding: 15px 15px 5px
  box-shadow:
    0 1px 3px rgba(#000, .12),
    0 1px 2px rgba(#000, .24)
  background-color: #fff

  &.is-spam
    padding: 1em
    font-size: .8em
    text-align: center
    color: #adadad
    background: #f3f3f3

  .show-spam
    cursor: pointer

    &:hover
      text-decoration: underline

  .comment-overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    background: rgba(#fff, .95)

    .btn:first-child
      margin-right: 10px

  .needs-login
    padding: 0 1.5em
    font-size: .9em

  &:hover
    .actions
      .reply
        i
          color: rgba(0,0,0,0.8)

  .valid-badge
    display: block
    color: #999
    font-weight: 600
    font-size: 11px
    margin-top: 3px

  @import './header/styles'
  @import './footer/styles'
  @import './replies/styles'
  @import './content/styles'
