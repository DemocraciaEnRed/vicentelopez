.topic-article-wrapper
  padding-top: 0em
  width: 100%

  @import './admin-actions/styles'
  @import './header/styles'
  @import './content/styles'
  @import './footer/styles'
  @import './vote/styles'
  @import './poll/styles'
  @import './cause/styles'
  @import './social/styles'
  @import './comments/styles'
  .cover
    width: 100%
    height: 408px
    background-size: cover
    background-position: center
  hr
    font-size 15px
    margin 35px 0 30px
    height auto
    border 0
    line-height 0
    text-align center
    letter-spacing 8px
    color #444

    &:after
      content '· · ·'

.topic-overlay
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  z-index 1
  background rgba(0,0,0,0.5)

  @media screen and (min-width 701px)
    display none

.topic-article-content
  max-width 848px
  margin 0 auto
  padding-left 15px
  padding-right 15px
  &.entry-content
    font-family: 'Roboto', sans-serif!important
    font-size: 20px;
    font-weight: 100;
    color: #696969;
  &.topic-tags
    color: #9a3a96
    font-weight: 100
    margin: 30px auto
    font-size: 20px
    a
      margin-right: 10px

.votar-este
  text-align: center
  background: #e3e3e3
  color: #555!important
  padding: 20px 60px
  box-shadow: 0 3px 10px -2px #555
  border-radius: 2px
  margin-bottom: 20px
  @media screen and (max-width: 500px)
    padding: 20px 0
    p
      padding: 0 5px
  p
    font-size: 18px
    margin: 20px auto
    max-width: 440px
  a
    border: none
    @media screen and (max-width: 500px)
      font-size: 16px
  a:hover
    color: #fff
    text-decoration: none

.proyecto-ganador
  margin: 0 auto
  max-width: 650px
  font-family: 'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif
  .box-header
    display: flex
    justify-content: center
    align-items: center
    padding: 7px 0
    background-color: #7cbb42
    color: white
    font-weight: bold
    font-size: 30px
    text-transform: uppercase
  .box-content
    display: flex
    justify-content: space-around
    justify-content: space-evenly
    align-items: center
    padding: 10px 0
    background-color: #e9e9e9
    .box-content-item
      display: flex
      flex-direction: column
      align-items: center
      justify-content: center
      margin: 5px 10px
      .box-content-title
        font-weight: 500
        font-size: 24px
      .box-content-info
        color: #3d699e
        font-weight: 500
        font-size: 47px
  .box-footer
    display: flex
    justify-content: center
    align-items: center
    padding: 7px 0
    background-color: #3d699e
    color: #ffffff
    .hashtag
      font-size: 24px
    a
      margin-left: 10px

.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

.no-topics
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    button
      margin-top 20px
    p
      color #888

topicBoxSize = 15
topicColor = #333
topicColor2 = #999

.loader-wrapper
  position relative
  flex 1

  .topic-loader
    position absolute
    left 50%
    top 50%
    border-radius 100%
    width topicBoxSize * 1px
    height topicBoxSize * 1px
    box-shadow topicBoxSize*1px topicBoxSize*1px topicColor2,
    topicBoxSize*-1px topicBoxSize*1px topicColor,
    topicBoxSize*-1px topicBoxSize*-1px topicColor2,
    topicBoxSize*1px topicBoxSize*-1px topicColor
    animation topic-loader-spin ease infinite 4s
    transition-property opacity

    @-webkit-keyframes topic-loader-spin {
      0%,
      100% {
        box-shadow: topicBoxSize*1px topicBoxSize*1px topicColor2,
        topicBoxSize*-1px topicBoxSize*1px topicColor,
        topicBoxSize*-1px topicBoxSize*-1px topicColor2,
        topicBoxSize*1px topicBoxSize*-1px topicColor
      }

      25% {
        box-shadow: topicBoxSize*-1px topicBoxSize*1px topicColor,
        topicBoxSize*-1px topicBoxSize*-1px topicColor2,
        topicBoxSize*1px topicBoxSize*-1px topicColor,
        topicBoxSize*1px topicBoxSize*1px topicColor2
      }

      50% {
        box-shadow: topicBoxSize*-1px topicBoxSize*-1px topicColor2,
        topicBoxSize*1px topicBoxSize*-1px topicColor,
        topicBoxSize*1px topicBoxSize*1px topicColor2,
        topicBoxSize*-1px topicBoxSize*1px topicColor
      }

      75% {
        box-shadow: topicBoxSize*1px topicBoxSize*-1px topicColor,
        topicBoxSize*1px topicBoxSize*1px topicColor2,
        topicBoxSize*-1px topicBoxSize*1px topicColor,
        topicBoxSize*-1px topicBoxSize*-1px topicColor2
      }
    }
