.ideas-topic-card
  width: 100%
  margin: 0 0 1.5em
  height: auto
  box-shadow: 0 0 1px 0 #555
  height: auto
  &:hover
    box-shadow: 0 2px 5px #555
  .topic-card-title
    margin-bottom: 5px
    &>a
      color: #444

  .participants
    font-weight: 400
    color: #a5a9aa
    display: inline-block
    span
      color: #099dc3

  .topic-card-info
    padding-bottom: 0
    height: auto

  .topic-card-tags
    margin-top: 10px
    span
      font-weight: 400
      margin: 5px 5px 0 0

  .topic-card-description
    margin: 10px 0 0 0
    a
      font-size: 15px
      white-space: normal
  .topic-card-footer
    padding: 20px 35px
    display: flex
    justify-content: space-between
    align-items: flex-end
    .btn
      background: #099dc3
      margin: 0

  .topic-creation
    color: #a5a9aa
    font-size: 13px
    margin-bottom: 0.8em
    display: flex
    align-items: center

    i
      margin-right: .5em

    .date
      flex: 1
      text-align: right

    .avatar
      margin-right: 5px
      width: 25px
      height: 25px
      border-radius: 50%
      background-size: cover
      background-position: center center
