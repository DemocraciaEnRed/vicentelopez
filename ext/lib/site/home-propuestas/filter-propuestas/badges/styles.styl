h1
  font-size: 14px;
  margin: 30px 0 20px;

.badges-wrapper
  display: flex;
  flex-wrap: wrap;
  justify-content: center;

  .badges-item
    background-color: #8c1e81;
    color: white;
    font-size: 13px;
    font-weight: 600;
    line-height: 20px;
    margin: 0 7px 8px;
    padding: 3px 6px 3px 17px;
    border-radius: 20px;

    .badge-cross
      padding-right: 4px
      padding-left: 4px
      margin-left: 4px;
      cursor: pointer;
