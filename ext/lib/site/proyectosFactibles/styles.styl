@import './topic-card/styles'
.seccion-proyectos-factibles
  background-color: #e9e9e9
  padding-bottom: 30px
  text-align: center
  .row
    width: 100%
  .cont-boton-azul
    text-align: center


  .cont-barrio
    margin-top: 3%
    text-align: center

  .cont-boton-azul
    margin: 20px 0 0

  .seccion-barrios-factibles
    overflow: hidden
    position: relative
    &::before
      content: ""
      position: absolute
      width: 100%
      left: 0
      top: 0
      // box-shadow: 0 0 8px 1px #747474
    &::after
      content: ""
      position: absolute
      width: 100%
      left: 0
      bottom: 0
      // box-shadow: 0 0 8px 1px #747474
    .seccion-barrios-proyectos-factibles
      font-family: 'BrandonGrotesque', sans-serif
      width: 100%
      display: -webkit-flex
      display: flex
      flex-wrap: wrap
      @media screen and (max-width: 500px)
        padding: 0
      .fondo-titulo
        margin-bottom: 35px
      h2
      h3
        font-weight: 500
      .row
        width: 100%
      .cont-barrio
        margin-top: 3%
        text-align: center

      .seccion-botones-factibles
        margin-bottom: 3%
        text-align: center
        @media screen and (max-width: 500px)
          width: 100%
          display: flex
          flex-flow: column wrap
          align-items: center
        .boton-azul
          font-size: 20px
          margin: 5px 7px 15px
          padding: 7px 20px
          @media screen and (max-width: 500px)
            font-size: 15px
            margin: 15px 0

      .contenedor-boton
        margin: 3% 0 0 5%
      button:hover
        background-color: #106c8e
      .btn.active
        background: linear-gradient(to right, #099dc3, #8a288f)
        color: white
        border: none