  .topic-card-body
    flex: 1


  .topic-card-footer
    text-align: right
    align-self: flex-end
    width: 100%
    position: relative

  .social-links
    position: absolute
    font-size: 20px

    span
      cursor: pointer
      margin-right: 7px
      color: #999
    h2
      border-bottom: 3px solid #93c01f
      font-family: 'BrandonGrotesque', sans-serif
      color: #93c01f
      padding: 0
      margin: 0
      font-size: 8vw
      @media screen and (min-width: 750px)
        font-size: 4rem
  .row
    width: 100%
  .boton-azul
    background-color: #1791be

    color: white
    box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")
    color white
    margin-top: 10%
    align-items: center
    justify-content: center
    font-weight: 500
    font-size: 3vw
    margin-bottom: 3%


    @media screen and (min-width: 764px)
      font-size: 1.5rem
      line-height: 24px
      height: 77px
      width: 200px

  .cont-barrio
    margin-top: 3%
    text-align: center
  .cont-boton-azul
    text-align: center
  .portada
    background-color: #93c01f
    height: 227.2px
    &:before
      content: ''
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0


      background: -webkit-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 99%)
      background: -o-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 99%)
      background: -moz-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 99%)
      background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 99%)



