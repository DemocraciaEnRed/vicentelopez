@import './topic-card/styles'
.carrusel-seccion
  .carousel-cell
    width: 66%
    height: 200px
    margin-right: 10px
    background: #8C8
    border-radius: 5px
  .titulo-verde
    display: block
    // background-color: #7cbb42
    text-align: center
    // width: 33%
    // margin: 3% 0 0 33%
    // color: white
    // box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")

    // Prueba de linea verde
    h2
      border-bottom: 3px solid #93c01f
      font-family: 'BrandonGrotesque', sans-serif
      color: #93c01f
      padding: 0
      margin: 0
      font-size: 8vw
      @media screen and (min-width: 750px)
        font-size: 4rem
  .row
    width: 100%
  .cont-barrio
    margin-top: 3%
    text-align: center
  .budget
    display: block
    margin: 0
    color: white
    font-weight: 900
    right: 10
    font-size: 1.5rem
    position: absolute



  .portada
    background-color: #93c01f
    &:before
      content: ''
      position: absolute
      top: 0
      right: 0
      bottom: 0
      left: 0


      background: -webkit-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 85%)
      background: -o-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 85%)
      background: -moz-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 85%)
      background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1) 85%)
