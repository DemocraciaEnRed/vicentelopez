.seccion-barrios-proyectos
  font-family: 'BrandonGrotesque', sans-serif
  width: 100%
  display: -webkit-flex
  display: flex
  flex-wrap: wrap
  h2
  h3
    font-weight: 500
  .row
    width: 100%
  .cont-barrio
    margin-top: 3%
    text-align: center


  .seccion-botones
    margin: 3% 5%
    align-items: center
    justify-content: center
  .contenedor-boton
    margin: 3% 0 0 5%
  .boton-azul
    background-color: #1791be
    color: white
    box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")

    display: inline-block
    a
      color white
    h3
      margin: 0
      font-size: 4vw

    @media screen and (min-width: 764px)
      line-height: 24px
      height: 77px
      h3
        font-size: 1.5rem

  button:hover
    background-color: #106c8e

    a
      color: unquote("rgb(198, 198, 198)")
