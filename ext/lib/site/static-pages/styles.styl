.ext-terminos-y-condiciones
  position: relative

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    & > a
      color: inherit

      &:hover
        border-bottom: 1px solid #666

  .thumbs
    background: transparent
    margin-top: 25px
    > div
      height: 75px
      width: 75px
      background-size: contain

  .filas
    padding: 0 10%
    font-family: 'Roboto', sans-serif
    font-weight: 300
    font-size: 16px
    color: #696969


    h2
      font-size:  24px
      font-family: 'BrandonGrotesque', sans-serif
      text-transform: uppercase
      text-align: center
      color: #696969
      margin: 15px 0

    .fila
      padding: 30px 60px

      .cols
        float: left

      .col-1
        width: 38%

      .col-2
        width: 62%

      &:nth-child(even)
        background:#f9f9f9
        border-color: #c4c4c4
        border-top-width: 1px
        border-bottom-width: 1px

        .col-1
          width: 62%

        .col-2
          width: 38%

      &:after
        content: ""
        display: table
        clear: both
