.ext-herramientas
  position: relative
  @media screen and (max-width: 500px)
    padding: 0
    max-width: 630px

  h1,
  h2,
  h3,
  h4,
  h5,
  h6
    & > a
      color: inherit

      &:hover
        border-bottom: 1px solid #666

  .thumbs
    background: transparent
    margin-top: 25px
    > div
      height:150px
      width: 150px
      @media screen and (min-width: 500px)
        height: 135px
        width: 135px
      background-size: contain

  .filas
    @media screen and (min-width: 500px)
      padding: 0 5%
    font-family: 'Roboto', sans-serif
    font-weight: 300
    font-size: 15px
    text-align: center
    color: #696969

    @media screen and (min-width: 500px)
      font-size:13px
      text-align: left
    @media screen and (min-width: 769px)
      font-size: 16px
      padding: 0 10%

    h2
      font-size: 30px
      @media screen and (min-width: 500px)
        font-size:  24px
      font-family: 'BrandonGrotesque', sans-serif
      text-transform: uppercase
      text-align: center
      color: #696969
      margin: 0 0 15px

    .fila
      padding: 20px 30px 40px
      &:first-child
        padding-top:0
        @media screen and (max-width: 500px)
          .thumbs
            margin-top: 0
      @media screen and (min-width: 500px)
        padding: 20px 30px
      @media screen and (min-width: 769px)
        padding: 30px 60px


      &.no-bg
        background:none !important
        border: none !important

      &.con-icono
        .col-2
          display: flex
          justify-content: center
          align-items: center
          height: 250px

      @media screen and (min-width: 500px)
        .cols
          float: left

        .col-1
          width: 38%

        .col-2
          width: 62%
          a
            font-weight: normal
            &:hover
              color: #8C1E81

      &:nth-child(odd)
        background:#f9f9f9
        border: 1px solid #c2c2c2
        border-left: none
        border-right: none

        @media screen and (min-width: 500px)
          .cols
            float:right

      &:after
        content: ""
        display: table
        clear: both

  .map-box
    margin-bottom: 50px
    &:after
      content: ""
      display: table
      clear: both
    .mapa
      display: block
      text-align: center
      // para hacer el mapa responsive
      position: relative
      height: 0
      overflow: hidden
      padding-bottom: 75% // aspect ratio
      & iframe
        border: none
        position: absolute
        top: 0
        left: 0
        width: 100% !important
        height: 100% !important
.ext-acerca-de
  .subtitulo
    border-bottom: 1px solid #c2c2c2
    padding: 0 10px
    h2
      font-size: 2em
      text-transform: uppercase
      text-align: center
      font-family: 'BrandonGrotesque', sans-serif
      color: #71bf44
    p
      font-family: 'BrandonGrotesque', sans-serif
      color: #71bf44
      text-align: center
      font-size: 1.7em
  .boton-azul
    font-size: 16px
    margin: 10px 0 0
    padding: 10px 20px
  .faq
    text-align: center
    h3
      font-size: 1.2em
  .delegaciones
    display: flex
    flex-wrap: wrap
    justify-content: center
    div
