    color: #7cbb42
  h4
    color: #444
        
  .tabla-presupuestos
    tbody
      tr
        td
          padding: 10px
        td:first-child
          font-weight: bold
  
.carousel-distribucion-proyectos
  max-width: 1000px
  width: 100%
  margin: auto
  .carousel-cell
    img
      width: 300px
      height: 300px
      margin: 0 20px
      @media screen and (max-width: 480px)
        width: 250px
        height: 250px

  .flickity-prev-next-button.previous
    background-image: unquote("url('ext/lib/site/static-pages/LeftArrowCarousel.svg')")
    left: -40px
  .flickity-prev-next-button.next
    background-image: unquote("url('ext/lib/site/static-pages/RightArrowCarousel.svg')")
    right: -40px

  .flickity-prev-next-button.previous,
  .flickity-prev-next-button.next
    background-size: contain;
    background-color: transparent
    height: 60px
    background-repeat: no-repeat;
    background-position: center
    @media screen and (min-width: 780px)
      height: 100px

    svg
      display: none

  .refe
    margin-top: 20px
    width: 100%
    max-width: 400px
