.seccion-barrios
  font-family: 'BrandonGrotesque', sans-serif
  background-color: #e9e9e9
  width: 100%
  display: -webkit-flex
  display: flex
  flex-wrap: wrap
  .row
    width: 100%
  .barrio-verde
    display: block
    // background-color: #7cbb42
    text-align: center
    width: 33%
    margin: 3% 0 0 33%
    color: white
    // box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")

    // Prueba de linea verde
    border-bottom: 3px solid #7cbb42
    h2
      color: #7cbb42
      padding: 0
  h3
    font-size: 1.4rem
    margin: 0
  .seccion-botones
    margin: 3% 0
    align-items: center
    justify-content: center

  .contenedor-boton
    margin: 3% 0 0 5%
  .boton-azul
    background-color: #1791be
    height: 80px
    color: white
    font-weight: 300
    box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")
    // padding: 10% 8%
    // font-size: 1.3em
    display: inline-block
    a
      color white

  button:hover
    background-color: #106c8e

    a
      color: unquote("rgb(198, 198, 198)")
