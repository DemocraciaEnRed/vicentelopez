.banner-proyectos
  width: 100%
  height: 280px
  display: flex
  flex-wrap: wrap
  flex-direction: column
  justify-content: center
  align-items: center
  background-image: linear-gradient(to right, #0099c3, #8c1e81, #8c1e81)
  opacity: 0.7
  text-align: center
  color: #FFF
  .proyectos-title
    font-family: 'Roboto', sans-serif
    font-size: 36px
    @media screen and (max-width: 570px)
      font-size: 25px
    font-weight: 500
    letter-spacing: 0.7px
    margin: 0
  .proyectos-subtitle
    font-family: 'Roboto', sans-serif
    font-size: 24px
    @media screen and (max-width: 570px)
          font-size: 18px
          margin: 20px 5 5 0
    font-weight: 300
    letter-spacing: 0.4px
    max-width: 1042px
    margin: 20px 0 0 0