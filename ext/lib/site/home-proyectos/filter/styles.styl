.filters-nav
  width: 100%
  display: flex
  justify-content: space-between
  margin-bottom: 83px
  .button-container
    position: relative
    .dropdown-button
      width: 300px
      height: 45px
      border-radius: 9px
      border: solid 1px rgba(153, 153, 153, 0.14)
      background: #FFF
      display: flex
      justify-content: space-between
      padding-left: 20px
      padding-right: 20px
      cursor: pointer
      .button-label
        font-family: 'Roboto', sans-serif
        font-size: 16px
        font-weight: 300
        color: #000
        &.active
          color: #8c1e81
      .badge
        font-family: 'Lato', sans-serif
        font-size: 14px
        color: #FFF
        background-color: #8c1e81
        border-radius: 100%
        margin-left: 7px
      .caret-down 
        width: 12px
        height: 6px
        color: #999999

    .dropdown-options
      position: absolute
      padding: 0px 15px 14px 20px
      margin-top: 14px
      width: 300px
      border-radius: 9px
      background-color: #ffffff
      box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.14)
      display: flex
      flex-direction: column
      align-items: flex-start
      z-index: 10
      .options-container
        display: flex
        flex-wrap: wrap
        flex-direction: column
        .option-label
          margin-top: 20px
          font-family: 'Lato', sans-serif
          font-size: 16px
          font-weight: 300
          .checkbox-label
            margin-left: 21px

      .clear-filters
        background: none
        border: 0px
        margin-left: 0
        align-self: flex-end
        span
          font-family: 'Lato', sans-serif
          font-size: 12px
          color: #00adb7
          text-decoration: underline
          cursor: pointer
          &:hover
            color: #8c1e81