@import '../jump-button/styles'
@import '../datos-forum/styles'

#forum-home
  .banner-proyectos
    width: 100%
    height: 280px
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-content: center
    background-image: linear-gradient(to right, #0099c3, #8c1e81, #8c1e81)
    opacity: 0.7
    text-align: center
    color: #FFF
    .proyectos-title
      font-family: 'Roboto', sans-serif
      font-size: 36px
      font-weight: 500
      letter-spacing: 0.7px
      margin: 0
    .proyectos-subtitle
      font-family: 'Roboto', sans-serif
      font-size: 24px
      font-weight: 300
      letter-spacing: 0.4px
      max-width: 1042px
      margin: 20px 0 0 0
  .grid-container
    padding: 58px 170px