.banner-fv
  padding: 0
  position: relative;
  margin-bottom: 50px;
  @media screen and (min-width: 620px)
    margin-bottom: 75px;

  .banner
    width: 100%
    display: block
    margin: 0 auto
    //height: 416px
    height: 360px
    background-size: cover
    background-image: unquote("url('ext/lib/site/banner-foro-vecinal/banner.png')")
    background-repeat: no-repeat
    padding: 0
    overflow: hidden
    & video
      width: 100%
      //muevo verticalmente un poco el video para que no corte tantas caras
      position: relative;
      top: 10%;
      transform: translateY(-10%);
    @media(max-width: 768px)
      height: 300px
    @media(max-width: 500px)
      height: 200px
  .contenedor
    bottom: -42px
    @media(max-width: 768px)
      bottom: -34px
    @media(max-width: 768px)
      bottom: -30px
    position: absolute
    display: block
    text-align: center
    left: 0
    right: 0

    .fondo-titulo
      display: inline-flex
      justify-content: center
      align-items: center
      background-color: #7cbb42
      color: white
      text-align: center
      box-shadow: 0 44px 12px -38px unquote("rgba(0, 0, 0, 0.31)")
      margin: 0 auto
      padding: 15px 40px 9px
      letter-spacing: 1px
      @media(max-width: 768px)
        box-shadow: 0 25px 3px -21px unquote("rgba(0, 0, 0, 0.31)")
        padding: 15px 20px 9px
        h1
          font-size: 40px
          @media(max-width: 500px)
            font-size: 32px
    h1
      font-family: 'BrandonGrotesqueBlack', sans-serif
      padding: 0
      margin: 0 auto
      font-size: 54px
      font-weight: 400
      text-transform: uppercase
