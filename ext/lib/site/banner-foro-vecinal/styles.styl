.banner-fv
  padding: 0
  position: relative;
  margin-bottom: 50px;
  @media(min-width: 2100px)
    width: 2100px
  @media screen and (min-width: 620px)
    margin-bottom: 75px;

  .banner
    width: 100%
    display: block
    margin: 0 auto
    //height: 416px
    height: 360px
    background-size: cover
    background-image: unquote("url('ext/lib/site/banner-foro-vecinal/banner.png')")
    background-repeat: no-repeat
    padding: 0
    overflow: hidden
    @media(min-width: 2100px)
      width: 2100px
    @media(min-width: 1936px)
      height: 600px
    @media(max-width: 1936px)
      height: 550px
    @media(max-width: 1773px)
      height: 500px
    @media(max-width: 1685px)
      height: 480px
    @media(max-width: 1564px)
      height: 440px
    @media(max-width: 1490px)
      height: 420px
    @media(max-width: 1396px)
      height: 400px
    @media(max-width: 1321px)
      height: 380px
    @media(max-width: 1251px)
      height: 360px
    @media(max-width: 1095px)
      height: 320px
    @media(max-width: 982px)
      height: 300px
    @media(max-width: 912px)
      height: 250px
    @media(max-width: 788px)
      height: 230px
    @media(max-width: 697px)
      height: 210px
    @media(max-width: 637px)
      height: 180px
    & video
      width: 100%
      //muevo verticalmente un poco el video para que no corte tantas caras
      position: relative;
      top: 10%;
      transform: translateY(-27%);  
      @media(min-width: 2100px)
        width: 2100px
        margin: 0
  .contenedor
    bottom: -42px
    @media(max-width: 768px)
      bottom: -34px
    @media(max-width: 768px)
      bottom: -30px
    position: absolute
    display: block
    text-align: center
    left: 0
    right: 0

    .fondo-titulo
      display: inline-flex
      justify-content: center
      align-items: center
      background-color: #7cbb42
      color: white
      text-align: center
      margin: 0 auto
      padding: 15px 40px 9px
      letter-spacing: 1px
      @media(max-width: 768px)
        padding: 15px 20px 9px
        h1
          font-size: 40px
          @media(max-width: 500px)
            font-size: 32px
    h1
      font-family: 'BrandonGrotesqueBlack', sans-serif
      padding: 0
      margin: 0 auto
      font-size: 54px
      font-weight: 400
      text-transform: uppercase
