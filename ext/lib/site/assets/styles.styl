.boton-azul
  align-items: center
  background-color: #1791be
  box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")
  color: white
  display: inline-block
  font-family: 'BrandonGrotesqueBold', sans-serif;
  font-weight: 500
  text-transform: uppercase;
  font-size: 14px
  margin: 5px;

  @media screen and (min-width: 764px)
    line-height: 24px
    height: 77px
    font-size: 24px
    line-height: 24px
    height: 77px
    width: 200px
    font-size: 1.5rem
    line-height: 24px
    height: 77px
    width: 200px

  &:active
    color: white

h2.title
  display: block
  text-align: center
  font-weight: 500
  text-transform: uppercase
  color: white
  border-bottom: 3px solid #93c01f
  color: #93c01f
  padding: 5px 0
  margin: 20px auto
  width: 80%
  font-size: 32px
  @media screen and (min-width: 750px)
    font-size: 4rem
