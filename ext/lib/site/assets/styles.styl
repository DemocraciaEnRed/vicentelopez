.boton-azul
  align-items: center
  background-color: #1791be
  box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")
  color: white
  display: inline-block
  font-family: 'Roboto', sans-serif;
  font-weight: 500
  text-transform: uppercase;
  font-size: 18px
  margin: 5px;
  line-height: 1.25;
  cursor: pointer;
  padding: .5rem 1rem;


  @media screen and (min-width: 764px)
    line-height: 24px
    font-size: 24px
    line-height: 24px

  &:active
  &:hover
    background: linear-gradient(to right, #099dc3, #8a288f)
    border: none;
    color: white;
//    color: unquote("rgb(198, 198, 198)")

.cont-boton-azul
  width: 100%

h2.title
  display: block
  text-align: center
  font-weight: 500
  text-transform: uppercase
  color: white
  border-bottom: 3px solid #93c01f
  color: #93c01f
  padding: 20px 0 5px
  margin: 20px auto
  width: 80%
  font-size: 32px
  @media screen and (min-width: 750px)
    font-size: 42px
    max-width: 600px
    padding-top: 30px
    margin-bottom: 30px
