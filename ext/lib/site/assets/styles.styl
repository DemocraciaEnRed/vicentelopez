.boton-azul
  align-items: center
  background-color: #1791be
  box-shadow: 0 6px 4px -2px unquote("rgba(0, 0, 0, 0.24)"), 0 0 2px 0 unquote("rgba(0, 0, 0, 0.12)")
  color: white
  display: inline-block
  font-family: 'Roboto', sans-serif;
  font-weight: 500
  text-transform: uppercase;
  margin: 5px;
  line-height: 1.25;
  cursor: pointer;
  font-size: 25px;
  padding: 15px 20px;
  border: none;
  @media screen and (min-width: 764px)
    line-height: 24px
    font-size: 24px
    line-height: 24px

  &:active
  &:hover
    background: linear-gradient(to right, #099dc3, #8a288f)
    border: none;
    color: white;
//    color: unquote("rgb(198, 198, 198)")

.cont-boton-azul
  width: 100%

.fondo-titulo
  display: inline-flex;
  justify-content: center
  align-items: center
  background-color: #7cbb42
  color: white
  text-align: center
  box-shadow: 0 15px 4px -10px unquote("rgba(0, 0, 0, 0.31)")
  margin: 40px auto 25px
  padding: 15px 20px 9px
  h2
    font-family: 'BrandonGrotesqueBlack', sans-serif
    padding: 0
    margin: 0 auto
    font-size: 38px
    font-weight: 400
    text-transform: uppercase
