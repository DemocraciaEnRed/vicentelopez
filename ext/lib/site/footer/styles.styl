.footer-static
  font-family: 'Roboto', sans-serif
  background-color: #595959
  width: 100%
  font-size: 16px
  padding: 5%
  @media screen and (min-width: 769px)
    font-size: 20px
  .contacto-detalles
    @media screen and (min-width: 500px)
      float: left
      width: 45%
      margin-right: 5%
    @media screen and (min-width: 769px)
      float: left
    h3
      color: white
      border-bottom: solid 1px #76b72a
      padding-bottom: 10px
      margin: 10px 0 20px
      font-weight: bold
      font-size: 20px
      line-height: 1.2em

    .datos-contacto
      margin: 20px 0
      text-align: left
      color: #ffffff
      span:first-child
        font-size: 18px
        font-weight: 500
        @media screen and (min-width: 769px)
          font-size: 22px

    p
      color: #d8d8d8
      line-height: 1.4

    span
      color: #d8d8d8
      display: block

    span:first-child
      color: white
      margin-bottom: 3%
      @media screen and (min-width: 500px)
        margin-bottom: 0

  .mapa-box
    @media screen and (min-width: 500px)
      float: right
      width: 40%

    > div
      position: relative
      width: 100%
      padding-top: 52%
      .mapa
        background-image: unquote("url('ext/lib/site/footer/mapa.svg')")
        display: block
        width: 100%
        height: 100%
        position: absolute
        top: 0
        background-repeat: no-repeat
        background-size: cover
        background-position: center
        border: none
      @media screen and (min-width: 500px)
        padding-top: 52%
        margin-top: 40px

  .logo
    clear: both
    padding-top: 20px
    width: 216px
    margin: auto
    a
      display: block
      background-image: unquote("url('ext/lib/site/footer/vicente-lopez-footer.svg')")
      width: 100%
      padding-top: 33%
      background-repeat: no-repeat
      background-position: center
      background-size: contain
      margin-bottom: 5px
      position: relative
      @media screen and (min-width: 360px)
        height: 70px

  .social-icon
    text-align: center
    margin: 20px 0
    @media screen and (min-width: 500px)
      text-align: left
      width: 300px

    .social-facebook
    .social-twitter
    .social-mail
    .social-instagram
      background-repeat: no-repeat
      background-size: cover
      width: 30px
      height: 30px
      margin: 0 5%
      display: inline-block
      @media screen and (min-width: 500px)
        width: 32px
        height: 32px
      @media screen and (min-width: 769px)
        width: 32px
        height: 32px
    .social-facebook
      background-image: unquote("url('ext/lib/site/footer/facebook-c.svg')")
    .social-twitter
      background-image: unquote("url('ext/lib/site/footer/twitter-c.svg')")
    .social-mail
      background-image: unquote("url('ext/lib/site/footer/email-c.svg')")
    .social-instagram
      background-image: unquote("url('ext/lib/site/footer/instagram-c.svg')")
  .terminos
    margin: 10px 0 0
    display: block
    padding: 0
    font-size: 12px
    text-transform: uppercase
    text-align: center
    width: 100%
    a
      color: #d8d8d8
      display: block

@media screen and (max-width: 500px)
  .container
    max-width: 900px
    margin: auto
