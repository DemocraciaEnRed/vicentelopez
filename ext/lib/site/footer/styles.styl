    margin-top: 10%

  .logo
    background-image: unquote("url('ext/lib/site/footer/vicente-lopez-footer.svg')")
    display: block
    height: 80px
    background-repeat: no-repeat
    background-size: 250px
    top: 42



  .social-icon
    width: 50px
    height: 50px
    margin-bottom: 5px
    margin-top: 5px
    .social-facebook
    .social-twitter
    .social-mail
      background-repeat: no-repeat
      width: 50px
      height: 50px
      margin-right: 4%
      display: inline-block
      float: left
      margin-bottom:10px
    .social-facebook
      background-image: unquote("url('ext/lib/site/footer/facebook-c.svg')")
