.seccion-proximos-encuentros
  background-color: #8C1E80
  //margin-bottom: 30px;
  margin-top: 30px;
  padding-top: 0;
  padding-bottom: 30px;
  @media screen and (max-width: 764px)
    .eventos-container
      flex-direction: column !important
      text-align: center !important
      .the-label
        padding-right: 0 !important
      .evento
        margin: 15px !important
  .boton-azul{
    margin: 10px auto 40px;  
  }
  .btn-container{
    width: 100%;
    text-align: center;
    margin: 10px 0px 40px;  
  }
  .fondo-titulo{
    margin: 0 auto 30px;
    margin-top: -30px;
    position: relative;
    .subtitle{
      font-size: 28px;
      margin: 5px 0;
    }
  }
  .happening-now .flex-elements{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
  .eventos-container{
    display:flex;
    flex-direction: row;
    align-items: center;
    margin: 10px 0;
    max-width: 768px;
    margin: 0 auto;
    p {
      color: #FFF;
      font-size: 12px;
      margin: 0;
      text-align: center
    }
    .the-label{
      width: 100%;
      padding-right: 40px;
      color: #FFF;
      h5{
        margin-bottom: 15px;
      }
      a{
        color: #FFF;
        font-weight: 400px;
        font-size: 14px;
        margin-top:10px;
        text-decoration: underline;
      }
    }
    .evento{
      margin: 0px 10px;
      min-width: 200px; 
      .top {
        position: relative;
        height: 40px;
        background-color: #727272;
        border-top-left-radius: 10px;  
        border-top-right-radius: 10px;  
        .poppi-left {
          background-color: #BFBFBF;
          position: absolute;
          width: 12px;
          height: 25px;
          top: -7px;
          left: 20%;
          border-radius: 20px;
        }
        .poppi-right {
          background-color: #BFBFBF;
          position: absolute;
          width: 12px;
          height: 25px;
          top: -7px;
          right: 20%;
          border-radius: 20px;
        }
      }
      .bottom{
        text-align: center;
        padding: 8px 12px;
        background-color: #FFF;
        border-bottom-left-radius: 10px;  
        border-bottom-right-radius: 10px;
        min-height: 185px;
        display:flex;
        flex-direction: column;
        justify-content: center;
        h3{
          color : #879c12;
          margin: 10px 0 3px;
          font-weight: 800;
        }
        h4{
          color: #727272;
          font-weight: 400;
          font-size: 16px;
          margin: 0 0 10px;
        }  
        p {
          color: #000;
          font-size: 12px;
          margin: 10px 0;
        }
      }
    }
  }