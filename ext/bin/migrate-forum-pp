#!/usr/bin/env node

const models = require('lib/models')()

const Forum = models.Forum
const mapPromises = (fn) => (array) => Promise.all(array.map(fn))

Forum.find({}).exec()
  .then(mapPromises((forum) => {
    let forumTopicsAttrs = forum.toObject().topicsAttrs

    const stateI = forumTopicsAttrs.map(s => s.name).indexOf('state')
    const votosI = forumTopicsAttrs.map(s => s.name).indexOf('votos')

    const estados = {
      "name" : "state",
      "kind" : "Enum",
      "title" : "Estado",
      "mandatory" : true,
      "options" : [
        {
          "name" : "pendiente",
          "title" : "Pendiente"
        },
        {
          "name" : "proyectado",
          "title" : "Proyectado"
        },
        {
          "name" : "ejecutandose",
          "title" : "En EjecuciÃ³n"
        },
        {
          "name" : "terminado",
          "title" : "Terminado"
        },
        {
          "name" : "perdedor",
          "title" : "Perdedor"
        }
      ]
    }

    const votos = {
      "kind" : "Number",
      "name" : "votos",
      "title" : "Votos",
      "mandatory" : true,
      "min" : 1,
      "max" : 999999999
    }

    forumTopicsAttrs[stateI] = estados

    if (!~votosI) forumTopicsAttrs.push(votos)

    forum.topicsAttrs = forumTopicsAttrs

    return forum.save()
  }))
  .then((forum) => {
    console.log('Listo! Foros PP actualizado.')

    process.exit(0)
  })
  .catch((err) => {
    console.error(err)
    process.exit(1)
  })
