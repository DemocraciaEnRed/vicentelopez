#topics-wrapper
  .topics-admin
    .heading
      h2= 'Preguntas y respuestas'
      .form-messages 

      .template-panel-group 
        .panel.panel-default.template
          .panel-heading
            h4.panel-title     
          .panel-collapsable
            .panel-body
            .actions.text-right
              span.glyphicon.glyphicon-edit
              span.glyphicon.glyphicon-trash
      .panel-group
      form#editForm.form(action=form.action, method='post', role='form', autovalidate, autosubmit)
        .form-group
          h5= 'Pregunta:'
          input.form-control(
            id='question'
            type='text'
            name='question'
            required
          )
          br
        .form-group
          h5='Respuesta:'
          #editAnswer
          input#answer(
            type='textarea'
            hidden
          )

        .form-group.actionsForm
          button.btn.btn-success.btn-lg= t('settings.save')
          a.btn.btn-danger.btn-lg= t('common.cancel')