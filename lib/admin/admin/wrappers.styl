.topics-admin
  .list-group
    padding-left 0
    padding-right 0

#topics-wrapper .topics-admin > ul
#tags-wrapper .tags-admin > ul
  list-style none
  margin 0px
  padding 0px

  li
    height 35px
    line-height 35px
    overflow hidden
    position relative
    margin 10px 0px
    padding 0 0 0px 5px

    a
      display block
      width 100%
      height 100%
      margin 0
      color #333
      font-weight normal

#topics-wrapper
  .list
    h4
      margin-top 3px

      small
        margin-left 10px

    a
      padding 15 15

      span.text
        font-weight normal
        margin-left 5px
        margin-right 10px

      &:hover
        color black

    .delete-topic
      background transparent

.bs-callout-left{
    padding: 20px;
    margin: 20px 0;
    border: 0 solid #eee;
    border-left-width: 5px;
    border-radius: 3px;
    box-shadow: 0 6px 4px -6px rgba(0,0,0,0.24), 0 0 2px 0 rgba(0,0,0,0.12);
}
.bs-callout-right{
    padding: 20px;
    margin: 20px 0;
    border: 0 solid #eee!important;
    border-right-width: 5px!important;
    border-radius: 3px!important;
    box-shadow: 0 6px 4px -6px rgba(0,0,0,0.24), 0 0 2px 0 rgba(0,0,0,0.12);
}
.bs-callout h4 {
    margin-top: 0;
    margin-bottom: 5px;
}
.bs-callout p:last-child {
    margin-bottom: 0;
}
.bs-callout code {
    border-radius: 3px;
}
.bs-callout+.bs-callout {
    margin-top: -5px;
}
.bs-callout-default {
    border-color: #777;
}
.bs-callout-default h4 {
    color: #777;
}
.bs-callout-primary {
    border-color: #428bca!important;
}
.bs-callout-primary h4 {
    color: #428bca;
}
.bs-callout-success {
    border-color: #5cb85c;
}
.bs-callout-success h4 {
    color: #5cb85c;
}
.bs-callout-danger {
    border-color: #d9534f;
}
.bs-callout-danger h4 {
    color: #d9534f;
}
.bs-callout-warning {
    border-color: #f0ad4e;
}
.bs-callout-warning h4 {
    color: #f0ad4e;
}
.bs-callout-info {
    border-color: #5bc0de;
}
.bs-callout-info h4 {
    color: #5bc0de;
}