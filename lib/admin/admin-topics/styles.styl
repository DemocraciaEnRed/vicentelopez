@import './export-update/styles'
#topics-wrapper
  .well
    > *
      margin 4px 0

  .btn.new
    width: 200px;
    margin-bottom: 10px;

  .export-update-wrapper
    float: right;
    .export-update
      margin-top: 0px
      .btn
        margin-right: 0;

  .busqueda-wrapper
    width: 100%

  button.buscar-tema
    cursor pointer
    color: white
    background-color: #337ab7
    width: 100%;

    &:hover,&:focus
      background-color: #286090

  button.sort.por-nombre
    font-weight: bold;
    padding-left: 4px
    padding-right: 4px
    line-height: 1em

  .row-filtros
    margin-top: 10px;
    .input-group
      margin: 0 auto;

  #topic-list
    .placa
      color: white;
      border-radius: 5px;
      padding: 1px 3px;
      background-color: #337ab7;
      margin-right: 5px;

    .topic-status-data
      margin-top: 6px;
      font-size: 0.7em;
      span:first-child
        margin-left: 0;

    .topic-title
      margin-bottom: 0.5em;
      a
        padding: 0

    .topic-multi-tags
      .topic-tag
        font-size: 0.8em;
      .topic-tags
        font-size: 0.7em;
      .glyphicon
        margin-right: 5px;

    .topic-buttons
      .btn
        margin: 0 3px;
        &:first-child
          margin-left: 0
        &:last-child
          margin-right: 0
      .mas-acciones
        display: block;
        margin-top: 5px;
        width: 131px;
        font-size: 12px;

  .topics-pagination
    text-align: center
