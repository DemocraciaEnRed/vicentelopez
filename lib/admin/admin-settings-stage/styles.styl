h5
  font-size: 22px;
  margin-top: 30px;


switch {
  display: inline-block;
  height: 34px;
  position: relative;
  width: 60px;
}

.switch input {
  display:none;
}

.slider {
  margin-top:6px
  background-color: #ccc;
  width:60PX
  height:31px
  cursor: pointer;
  transition: .4s;
}

.slider:before {
  background-color: #fff;
  bottom: 7px;
  content: "";
  height: 26px;
  left: 4px;
  position: absolute;
  transition: .4s;
  width: 26px;
}

input:checked + .slider {
  background-color: #66bb6a;
}

input:checked + .slider:before {
  transform: translateX(26px);
}

.slider.round {
  border-radius: 34px;
}

.slider.round:before {
  border-radius: 50%;
}
