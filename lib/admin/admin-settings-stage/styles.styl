#user-badges-wrapper form .form-group span.error
  top: 40px

h5
  font-size: 22px;
  margin-top: 30px;


switch 
  display: inline-block;
  height: 34px;
  position: relative;
  width: 60px;


.switch input 
  display:none;


.slider 
  margin-top:6px
  background-color: #ccc;
  width:60PX
  height:31px
  cursor: pointer;
  transition: .4s;


.slider:before 
  background-color: #fff;
  bottom: 13%;
  content: "";
  height: 26px;
  left: 4px;
  position: absolute;
  transition: .4s;
  width: 26px;


input:checked + .slider 
  background-color: #66bb6a;


input:checked + .slider:before 
  transform: translateX(26px);


.slider.round 
  border-radius: 34px;


.slider.round:before 
  border-radius: 50%;

.state-votation
  border: 1px solid #ccc
  border-radius: 20px
  overflow: auto
  display:flex
  @media(max-width: 768px)
    display: grid
  .col-sm-4
    border-left: 1px solid #ccc
    padding: 0
    @media(max-width: 768px)
      border-top: 1px solid #ccc
  .col-sm-4:first-child
    border: none
    @media(max-width: 768px)
      border-top: none
  label
    cursor: pointer
    text-align: center 
    margin: 0!important
    padding: 8px
    width: 100%
    height: 100%
    display: grid;
    align-content: center;
    justify-content: center;
  .active
    background-color: #66bb6a
