#tag-wrapper
  form
    .tag-image
      position relative
      display inline-block
      width 50px
      height 50px
      margin-bottom 10px
      margin-right 4px
      background-color #444
      background-repeat no-repeat
      background-size 80% 80%
      background-position center center

      &:last-child
        margin-right 0px

      label
        cursor pointer
        position absolute
        left 0
        top 0
        width 100%
        height 100%

      input[type="radio"]
        position absolute
        top 0
        left 0
        pointer-events none
        opacity 0
        margin 0
        padding 0
        background transparent
        border 0

        &:checked + label
          box-shadow 0 0 0px 2px #3d699e
          border 1px solid #fff

    .form-group
      span.error
        top 40px

      .tag-image
        span.error
          display none
