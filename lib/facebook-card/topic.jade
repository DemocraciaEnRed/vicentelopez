- var title = config.socialshare.siteName
- if (topic.mediaTitle) title = `${topic.mediaTitle} | ${config.socialshare.siteName}`
- var image = topic.coverUrl ? topic.coverUrl : config.socialshare.image

html
  head
    meta(property='og:title', content=title)
    meta(property='og:type', content='website')
    meta(property='og:url', content=url)
    meta(property='og:image', content=image)
    meta(property='og:site_name', content=config.socialshare.siteName)
    meta(property='og:description', content=config.socialshare.description)
