.forum-card
  margin-bottom 20px
  font-size 14px
  overflow hidden
  color #fff
  padding 20px
  cursor pointer
  min-height 200px
  display flex
  flex-direction column

  .author
    display flex
    align-items center
    align-self flex-end
    .avatar
      width 35px
      height 35px
      border-radius 100%
      margin-left 10px
  h1
    margin 50px 0 10px 0
  p.desc
    margin 0
