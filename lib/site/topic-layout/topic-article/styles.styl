.topic-article-wrapper
  padding-top: 1em
  width: 100%

  @import './admin-actions/styles'
  @import './header/styles'
  @import './content/styles'
  @import './footer/styles'
  @import './vote/styles'
  @import './poll/styles'
  @import './cause/styles'
  @import './social/styles'
  @import './comments/styles'

  hr
    font-size 15px
    margin 35px 0 30px
    height auto
    border 0
    line-height 0
    text-align center
    letter-spacing 8px
    color #444

    &:after
      content '· · ·'

.topic-overlay
  position fixed
  top 0
  right 0
  width 100%
  height 100%
  z-index 1
  background rgba(0,0,0,0.5)

  @media screen and (min-width 701px)
    display none

.topic-article-content
  max-width 600px
  margin 0 auto
  padding-left 15px
  padding-right 15px

.embed-container
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  max-width 100%

  iframe
  object
  embed
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    border none

.no-topics
    display flex
    flex-direction column
    justify-content center
    align-items center
    width 100%
    button
      margin-top 20px
    p
      color #888

topicBoxSize = 15
topicColor = #333
topicColor2 = #999

.loader-wrapper
  position relative
  flex 1

  .topic-loader
    position absolute
    left 50%
    top 50%
    border-radius 100%
    width topicBoxSize * 1px
    height topicBoxSize * 1px
    box-shadow topicBoxSize*1px topicBoxSize*1px topicColor2,
    topicBoxSize*-1px topicBoxSize*1px topicColor,
    topicBoxSize*-1px topicBoxSize*-1px topicColor2,
    topicBoxSize*1px topicBoxSize*-1px topicColor
    animation topic-loader-spin ease infinite 4s
    transition-property opacity

    @-webkit-keyframes topic-loader-spin {
      0%,
      100% {
        box-shadow: topicBoxSize*1px topicBoxSize*1px topicColor2,
        topicBoxSize*-1px topicBoxSize*1px topicColor,
        topicBoxSize*-1px topicBoxSize*-1px topicColor2,
        topicBoxSize*1px topicBoxSize*-1px topicColor
      }

      25% {
        box-shadow: topicBoxSize*-1px topicBoxSize*1px topicColor,
        topicBoxSize*-1px topicBoxSize*-1px topicColor2,
        topicBoxSize*1px topicBoxSize*-1px topicColor,
        topicBoxSize*1px topicBoxSize*1px topicColor2
      }

      50% {
        box-shadow: topicBoxSize*-1px topicBoxSize*-1px topicColor2,
        topicBoxSize*1px topicBoxSize*-1px topicColor,
        topicBoxSize*1px topicBoxSize*1px topicColor2,
        topicBoxSize*-1px topicBoxSize*1px topicColor
      }

      75% {
        box-shadow: topicBoxSize*1px topicBoxSize*-1px topicColor,
        topicBoxSize*1px topicBoxSize*1px topicColor2,
        topicBoxSize*-1px topicBoxSize*1px topicColor,
        topicBoxSize*-1px topicBoxSize*-1px topicColor2
      }
    }
