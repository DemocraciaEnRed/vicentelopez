#content-404
  position: absolute
  background-color: #51394a
  width: 100%
  min-height: 100%

  .container-404
    width: 100%
    overflow: hidden
    display flex
    flex-direction column
    justify-content center
    align-items center

    img
      max-width: 100px
      margin: 0 auto
      display: block

    .note
      text-align: center
      font-size: 80px
      color: #ecf0f1

    h1
      text-align: center
      color: #ecf0f1
      margin: 0 auto

    .goback
      text-align: center
      margin-top: 20px
      color: #bdc3c7

body.not-found-page
  .app-header
    .profile
      display: none

@media only screen and (max-width: 700px)
  #content-404
    .container-404
      width: 90% !important
      padding-top: 20% !important
