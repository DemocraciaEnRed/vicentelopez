.topic-card
  display block
  margin 15px
  width 260px
  box-shadow 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  overflow hidden
  color inherit
  cursor pointer
  transition all .3s unquote('cubic-bezier(.25,.8,.25,1)')
  background-color #fff
  position relative

  &:hover
    box-shadow 0 10px 20px rgba(0,0,0,.19), 0 6px 6px rgba(0,0,0,.23)

  .topic-cover
    position relative
    width 100%
    background-size cover

    &:after
      content ''
      display block
      padding-top 65%

  h3
    font-weight 100
    margin 10px 10px 40px

  .participants
    position absolute
    bottom 0
    margin 5px 10px
    color #555
    font-size 13px
